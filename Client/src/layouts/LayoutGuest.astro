---
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Rotten Games - {title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cal+Sans&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
	</head>
	<body class="relative">
		<header class="px-52 absolute p-5 flex items-center justify-between w-full rounded-b-2xl">
			<h1 class="font-medium text-2xl flex items-center">Rotten<span class="text-slate-300 font-bold text-shadow-xs text-shadow-[#473f00]">Games</span></h1>
			<nav class="text-sm flex gap-6">
				<a href="" class="text-[#ffffff]">Inicio</a>
				<a href="" class="text-zinc-400">Nosotros</a>
				<a href="" class="text-zinc-400">Juegos</a>
				<a href="" class="text-zinc-400">Ayuda</a>
			</nav>
		</header>
		<section class="flex flex-col gap-24">
			<slot />
		</section>
		<footer>

		</footer>
	</body>
</html>
<style is:global>
	@import 'tailwindcss';
</style>
<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Cal sans','Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		background-color: #151515;
		color: white;
	}
	body::-webkit-scrollbar {
		background-color: #151515;
		width: 0px;
	}
</style>
